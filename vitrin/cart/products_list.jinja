{# 
This is a mock version of the Zid platform's cart products list template
for local development. On the actual Zid platform, this template is provided by the system.
#}

{% if cart.products_count > 0 %}
    {% for item in cart.items %}
    <div class="cart-product-item d-flex align-items-center py-3 border-bottom">
        <div class="cart-product-image me-3">
            <img src="{{ item.product.main_image.image.small | default('/assets/woman.png') }}" 
                 alt="{{ item.product.name }}" 
                 class="img-fluid" 
                 style="width: 80px; height: 80px; object-fit: cover;">
        </div>
        <div class="cart-product-details flex-grow-1">
            <h6 class="mb-1">{{ item.product.name }}</h6>
            <p class="text-muted small mb-1">{{ item.product.formatted_price }}</p>
            <div class="quantity-controls d-flex align-items-center">
                <button class="btn btn-sm btn-outline-secondary" type="button">-</button>
                <span class="mx-2 fw-bold">{{ item.quantity | default(1) }}</span>
                <button class="btn btn-sm btn-outline-secondary" type="button">+</button>
            </div>
        </div>
        <div class="cart-product-total text-end">
            <strong>{{ item.total_formatted | default(item.product.formatted_price) }}</strong>
            <br>
            <button class="btn btn-sm btn-link text-danger p-0">{{ _("Remove") }}</button>
        </div>
    </div>
    {% endfor %}
{% else %}
    <div class="empty-cart text-center py-5">
        <img src="/assets/empty-cart.svg" alt="{{ _('Empty Cart') }}" class="mb-3" style="width: 100px;">
        <h4>{{ _("Your cart is empty") }}</h4>
        <p class="text-muted">{{ _("Add some products to get started") }}</p>
        <a href="/products" class="btn btn-primary">{{ _("Continue Shopping") }}</a>
    </div>
{% endif %}