{% extends "layout.jinja" %}

{% block header %} {% include 'header.jinja' %} {% endblock %}

{% block top_links %}
    <link rel="stylesheet" href="{{ 'profile-style.css?v=1.02' | asset_url }}">
    <link rel="stylesheet" type="text/css" href="{{ 'account-pages.css?v=1.59' | asset_url }}" />
    <style>
      .account-content .btn-primary, .rtl .account-content .btn-primary {
          float: unset;
      }
      .add-to-wishlist, .share-wishlist {
        display: none !important;
      }
    </style>
{% endblock %}


{% block main_content %}
    <div class="container-parent">
        <div class="container">
            <div class="d-flex">
                <div class="flex-grow-1">
                    {% set title=_('profile.wishlist') %}{% set section='wishlist' %}{% include 'profile-title.jinja' %}
                    <div class="account-content">
                        <div>
                            <div id="wishlist-list" class="row">
                                {% for product in wishlist.data %}
                                    <div class="col-6 col-md-4 col-lg-3 py-3">
                                        {% set product=product %}{% set index=key %}{% include 'product-card.jinja' %}
                                    </div>
                                {% endfor %}
                            </div>
                            {% set totalPages=products.last_page %}{% set currentPage=products.current_page %}{% include 'pagination.jinja' %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block footer %} {% include 'footer.jinja' %} {% endblock %}

{% block script %}
	<script defer>
		$(`.add-to-wishlist .share-wishlist`).remove();
	</script>
{% endblock %}
